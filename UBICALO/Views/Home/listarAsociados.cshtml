@model UBICALO.ViewModel.VmListarAsociados
@{
    ViewBag.Title = "Listar asociados";
}

<div class="page-title">
    <div class="title_left">
        <h3>Asociados</h3>
    </div>

    <form role="form" method="post" action="@Url.Action("listarAsociados")">
        <div class="title_right">
            <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                <div class="input-group">
                    @Html.EditorFor(x => x.filtro, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nombre de asociado" } })
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit">Buscar</button>
                    </span>
                </div>
            </div>
        </div>
    </form>
</div>

<div class="clearfix"></div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <!--<div class="x_title">
            <h2>Planes de establecimiento</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>-->
        <div class="x_content">
            <table class="table table-striped responsive-utilities jambo_table bulk_action">
                <thead>
                    <tr class="headings">
                        <th class="column-title">Asociado </th>
                        <th class="column-title">Establecimiento </th>
                        <th class="column-title">Opción </th>
                        <th class="bulk-actions" colspan="7">
                            <a class="antoo" style="color:#fff; font-weight:500;">Bulk Actions ( <span class="action-cnt"> </span> ) <i class="fa fa-chevron-down"></i></a>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.asociados)
                    {
                        <tr class="even pointer">
                            <td>@p.Usuario</td>
                            <td>@p.Establecimiento.Nombre</td>
                            <td class="last">
                                <a class="btn-default" href="@Url.Action("registrarAsociado",new {asociadoID=p.AsociadoID })"><i class="fa fa-edit"></i> Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

